// Example program
#include <iostream>
#include <string>
using namespace std;

int potencia (int base, int potencia);
int fact (int n);
float coseno(int x);
float seno(int x);
float loga (int x);

int main()
{
    int resp,total,x;
    
    do{
        cout<<"                 ---Menu---                    "<<endl;
        cout<<"1--LOGARITMO N.  2--SENO.   3--COSENO.  0--SALIR"<<endl;
        cin>>resp;
        
        if(resp==1)
        {
            cout<<"Ingresa el Valor de la X:";
            cin>>x;
            cout<<loga(x);
        }
        else if(resp==2)
        {
             cout<<"Ingresa el Angulo:";
            cin>>x;
            cout<<seno(x);
        }else if(resp==3)
        {
            cout<<"Ingresa el Angulo:";
            cin>>x;
            cout<<coseno(x);
        }
    }
    while(!(resp==0));
}
int potencia (int base, int expo)
{
    int pot=1;
    
    for(int i=1;i<=expo;i++)
    {
        pot*=base;
    }
    return (pot);
}

int fact (int n)
{
    int factorial=1;
    for(int i=1;i<=n;i++)
    {
        factorial*=i;
    }
    
    return (factorial);
}
float loga (int x)
{
    float suma=0,total=0;
    
    total=x-1;
    total/=x;
        
    for(int i=1;i<=x;i++)
    {
        
        suma+=(float)1/i*(potencia(total,i));
    }
    
    return(suma);
    
}

float coseno(int x)
{        
    float coseno1=1;
            if(x==1)
            {
               
              return((float)potencia(1,2)/fact(2));   
              coseno1=1;
            }
            else if(x==0)
            {
                return(coseno1);
                
            }
            else if(x>=2)
            { 
             int i,j;
                int n=1;
             j=x;
             j=(j*2)+2;
                for(i=2;i<=j;i=i+2)
                 {    
                         n*=-1;
                         cout<<coseno1<<endl;
                         coseno1+=(n*(float)potencia(x,i)/fact(i));
                         
                                       
                     
                 }
         return(coseno1);
         coseno1=1;
         
            }
    
}

float seno(int x)
{        
    float seno1=x;
            if(x==1)
            {
               
              return((float)potencia(1,3)/fact(3));   
              seno1=1;
            }
            else if(x==0)
            {
                return(seno1);
                
            }
            else if(x>=2)
            { 
             int i,j;
                int n=1;
             j=x;
             j=(j*2)+2;
                for(i=1;i<=j;i=i+2)
                 {    
                         n*=-1;
                         cout<<seno1<<endl;
                         seno1+=(n*(float)potencia(x,i)/fact(i));
                         
                                       
                     
                 }
         return(seno1);
         seno1=x;
         
            }
    
}
