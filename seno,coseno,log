#include <iostream>
using namespace std;

int factorial(int n);
int potencia(int base,int poten);
float dos(float x,int n);
float loga(int x,int n);

int main()
{
	int op,n;
	float x;
	
	int resp,total,rep;
    
    do{
        cout<<"                 ---Menu---                    "<<endl;
        cout<<"1--LOGARITMO N.  2--SENO.   3--COSENO.  0--SALIR"<<endl;
        cin>>resp;
        cout<<"numero";
        cin>>rep;
        
        if(resp==1)
        {
            cout<<"Ingresa el Valor de la X:";
            cin>>x;
            cout<<loga(x,rep);
        }
        else if(resp==2)
        {
             cout<<"Ingresa el Angulo:";
            cin>>x;
            cout<<dos(x,rep);
        }else if(resp==3)
        {
            cout<<"Ingresa el Angulo:";
            cin>>x;
            cout<<dos(x,rep);
        }
    }
    while(!(resp==0));
}

float loga(int x,int n)
{
	float sum=0;
	for(int i=1;i<=n;i++)
	{
		sum+=(1.0/i)*potencia((x-1)/x,i);
	}
	return sum;
}

int potencia(int base,int poten)
{
	int pot=1;
    for(int i=1;i<=poten;i++)
    {
        pot*=base;
    }
    return pot;
}

float dos(float x,int n)
{
	int num,j;
	float suma=0.0,sen;
	j=x;
	j=(j*2)+2;
	for(int i=3,num=1;num<=j;i+=2,num++)
	{
		sen=(potencia(x,i)/factorial(i));
		if(num%2==0)
		{
			suma+=sen;
			cout << "A";
		}
		else
		{
			suma-=sen;
			cout << "B";
		}
	}
	
	return suma;
}

int factorial(int n)
{
	float fact=1.0;
	for(int i=1;i<=n;i++)
	{
		fact*=i;
	}
	return fact;
}



