// Example program
#include <iostream>
#include <string>
using namespace std;

int main()
{
    int numero[10];
    int suma=0;
    int num;
    
    cout<<"Ingresa un numero";
    cin>>num;
    
    for(int i=0;i<10;i++)
    {
        numero[i]=num;
        num++;
    }
    for(int h=0;h<10;h++)
    {
        suma+=numero[h];
    }
    
    cout<<"TABLA";
    for(int j=0;j<10;j++)
    {
       
        cout<<numero[j]<<endl;
    }
    cout<<"TABLA INVERSA"<<endl;
    for(int x=9;x>=0;x--)
    {
       
        cout<<numero[x]<<endl;
    }
    
    cout<<"SUMA"<<endl;
    cout<<suma;
}
