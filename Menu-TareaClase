// Example program
#include <iostream>
#include <string>
using namespace std;
void llenar(int numero[],int tam,int num);
void mostrar(int numero[],int tam);
int sumar(int numero[],int tam);
void mostrarinversa(int numero[],int tam);
void girararriba(int numero[],int tam);
void girarabajo(int numero[],int tam);
void invertir(int numero[],int tam);

int main()
{
    int numero[10],tam=10,num,op;
    
    do
    { 
        cout<<"---MENU---";

        cout<<"1- llenar"<<endl;
        cout<<"2- Mostrar"<<endl;
        cout<<"3- Sumar"<<endl;
        cout<<"4- MostarInverso"<<endl;
        cout<<"5- girararriba"<<endl;
        cout<<"6- girarabajo"<<endl;
        cout<<"7- invertir"<<endl;    
        cout<<"8- salir"<<endl;
        cin>>op;
        if(op==1)
        {
            cout<<"Ingresa un numero";
            cin>>num;
            llenar(numero,tam,num);        
        }
        else if(op==2)
        {
            mostrar(numero,tam);
        }
        else if(op==3)
        {
            cout<<sumar(numero,tam);
        }
        else if(op==4)
        {
            mostrarinversa(numero,tam);
        }else if(op==5)
        {
            girararriba(numero,tam);
        }else if(op==6)
        {
            girarabajo(numero,tam);
        }
        else if(op==7)
        {
            invertir(numero,tam);
        }
        else if(op==8)
        {
            girarabajo(numero,tam);
        }
    
    }while(!(op==8));
    
    
    
}
void llenar(int numero[],int tam, int num)
{
    for(int i=0;i<10;i++)
    {
        numero[i]=num;
        num++;
    }

}
int sumar(int numero[],int tam)
{
    int suma=0;
    for(int h=0;h<tam;h++)
    {
      suma+=numero[h];
    }
    
    return(suma);
}
void mostrar(int numero[],int tam)
{
    cout<<"TABLA";
    for(int j=0;j<10;j++)
    {
       
        cout<<numero[j]<<endl;
    }
}
void mostrarinversa(int numero[],int tam)
{
    cout<<"TABLA INVERSA"<<endl;
    for(int x=9;x>=0;x--)
    {
       
        cout<<numero[x]<<endl;
    }
}
void girararriba(int numero[],int tam)
{
    int aux;
    
    aux=numero[0];
  
    cout<<"GIRAR"<<endl;
    for(int x=0;x<tam-1;x++)
    {       
       numero[x]=numero[x+1];
       
    }
      numero[9]=aux;
    mostrar(numero,tam);
}
void girarabajo(int numero[],int tam)
{
    int aux;
    
    aux=numero[9];
   
    cout<<"GIRAR"<<endl;
    for(int x=9;x>0;x--)
    {       
       numero[x]=numero[x-1];
       
    }
     numero[0]=aux;
    mostrar(numero,tam);
}
void invertir(int numero[],int tam)
{
    int aux;
    for(int i=0;i<tam;i++)
    {
        aux=numero[i];
        numero[i]=numero[tam-i];
        numero[tam-i]=aux;
        cout<<numero[i]<<endl;
    }
     mostrar(numero,tam);
}
